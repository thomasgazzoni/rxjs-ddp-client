{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES5",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "declaration": true,
        "lib": [
            "es6",
            "dom"
        ],
        "rootDir": ".",
        "outDir": "./dist",
        "typeRoots": [
            "./node_modules/@types"
        ]
    },
    "exclude": [
        "node_modules",
        "bundles",
        "dist"
    ]
}
