{
    "name": "rxjs-ddp-client",
    "version": "1.2.0",
    "description": "RxJs DDP client based on node-ddp-client in Typescript (no meteor required)",
    "license": "MIT",
    "homepage": "https://github.com/thomasgazzoni/rxjs-ddp-client#readme",
    "author": "Thomas Gazzoni <thomas.gazzoni@gmail.com>",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/thomasgazzoni/rxjs-ddp-client.git"
    },
    "bugs": {
        "url": "https://github.com/thomasgazzoni/rxjs-ddp-client/issues"
    },
    "main": "./dist/index.js",
    "module": "./dist/index.js",
    "typings": "./dist/index.d.ts",
    "keywords": [
        "DDP",
        "Meteor",
        "RxJs",
        "Angular2"
    ],
    "scripts": {
        "clean": "rimraf node_modules && rimraf dist",
        "lint": "tslint --force --format verbose \"src/**/*.ts\"",
        "build": "./node_modules/.bin/tsc --pretty",
        "test": "rimraf dist && npm run build && ava",
        "watch": "npm run build -- --watch",
        "watch:test": "npm run test -- --watch",
        "prepublish": "npm run build"
    },
    "dependencies": {
        "ejson": "2.1.2",
        "rxjs": "5.0.0-rc.5",
        "underscore": "1.8.3",
        "@types/ejson": "2.1.2",
        "@types/underscore": "1.7.36"
    },
    "devDependencies": {
        "ava": "^0.17.0",
        "mock-socket": "^6.0.4",
        "rimraf": "^2.5.4",
        "tslint": "^4.0.0",
        "typescript": "2.1.4"
    },
    "ava": {
        "files": [
            "dist/test/*.js"
        ],
        "concurrency": 5,
        "failFast": true,
        "verbose": true,
        "powerAssert": false
    },
    "engines": {
        "node": ">=4.0.0"
    }
}
